<!-- Creates the Overall Grid -->
<div class="container">

  <!-- Row 1 -->
  <div class="row">
    <div class="col-sm-12 d-flex justify-content-around">
      <img src="/assets/img/burger.jpeg" alt="Burger Image" width="400" height="300">
    </div>
  </div>

  <!-- Row 2 -->
  <div class="row">
    <div class="col-sm-12 d-flex justify-content-around">
      <h1>Eat-Da-Burger!</h1>
    </div>
  </div>

<br>
  <!-- Row 3 -->
  <div class="row">
    <div class="col-sm-12 d-flex justify-content-around">
      <h3>Enter a new burger to eat: </h3>
    </div>
  </div>

  <!-- Row 4 -->
  <div class="row">
    <div class="col-sm-12 d-flex justify-content-around">
      {{!-- input txt box --}}
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="burger-name" name="burger">
          <button type="submit">Summit</button>
        </div>
      </form>

    </div>
  </div>

  <!-- Row 5 -->
  <div class="row">
    <div class="col-sm-6 d-flex justify-content-around">
      <p>Burgers to be Eaten!</p>
    </div>
    <div class="col-sm-6 d-flex justify-content-around">
      <p>Burgers Eaten:</p>
    </div>
  </div>

  <!-- Row 6 -->
  <div class="row">
    {{!-- burgers to be eaten --}}
    <div class="col-sm-6 d-flex justify-content-around">
      <ul>
        {{#each burger}}
        {{!-- from the burgers_controller.js file, burger = hbsObject which is an obj containing one key "burger" which contains a list of objects   --}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- burgers already eaten --}}
    <div class="col-sm-6 d-flex justify-content-around">
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> devoured-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>